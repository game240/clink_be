{
  "/api/search": {
    "get": {
      "summary": "전문 검색으로 페이지 검색",
      "tags": [
        "Search"
      ],
      "parameters": [
        {
          "in": "query",
          "name": "q",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "in": "query",
          "name": "page",
          "schema": {
            "type": "integer",
            "minimum": 1
          },
          "description": "페이지 번호 (기본값: 1)"
        },
        {
          "in": "query",
          "name": "pageSize",
          "schema": {
            "type": "integer",
            "minimum": 1
          },
          "description": "페이지당 항목 수 (기본값: 20)"
        }
      ],
      "responses": {
        "200": {
          "description": "페이지네이션을 포함한 검색 결과",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "description": "검색 결과 항목"
                    }
                  },
                  "pagination": {
                    "$ref": "#/components/schemas/Pagination"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "q 쿼리 파라미터 필요",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "서버 오류",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "/api/search-autocomplete": {
    "get": {
      "summary": "접두사로 제목 자동완성",
      "tags": [
        "Search"
      ],
      "parameters": [
        {
          "in": "query",
          "name": "q",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "제목 문자열 배열",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "maxItems": 10
              }
            }
          }
        },
        "500": {
          "description": "서버 오류",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}